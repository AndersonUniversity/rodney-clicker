<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:backgroundTint="#D8D7D7"
    android:backgroundTintMode="multiply"
    android:padding="@null"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="110dp"
        android:layout_height="101dp"
        android:adjustViewBounds="true"
        android:padding="@null"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.331"
        app:srcCompat="@drawable/rodneyicon"
        tools:layout_editor_absoluteX="301dp" />

    <TextView
        android:id="@+id/total_rodneys"
        android:layout_width="39dp"
        android:layout_height="33dp"
        android:layout_marginTop="260dp"
        android:background="@color/white"
        android:ems="10"
        android:fontFamily="@font/ubuntu_bold"
        android:inputType="textPersonName"
        android:text="0"
        android:textAlignment="center"
        android:textColor="#227726"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.868"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/total_helios"
        android:layout_width="116dp"
        android:layout_height="19dp"
        android:layout_marginTop="216dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="0"
        android:textAlignment="viewStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ravenDollars"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="40dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:ellipsize="none"
        android:ems="10"
        android:enabled="false"
        android:focusable="auto"
        android:focusableInTouchMode="false"
        android:fontFamily="@font/ubuntu_bold"
        android:inputType="textPersonName"
        android:linksClickable="false"
        android:longClickable="false"
        android:selectAllOnFocus="false"
        android:text="0"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#388E3C"
        android:textSize="55sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/totalRavenDollars"
        android:layout_width="53dp"
        android:layout_height="22dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:text="0"
        android:textAlignment="center"
        android:textColor="#007922"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/store_button"
        android:layout_width="109dp"
        android:layout_height="102dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:fadingEdge="horizontal|vertical"
        android:fadingEdgeLength="20sp"
        android:onClick="openStorePage"
        android:outlineProvider="none"
        android:padding="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/storebutton"
        android:text="@string/store_nav_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/ravenButton"
        android:layout_width="297dp"
        android:layout_height="217dp"
        android:layout_marginBottom="124dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:minHeight="500dp"
        android:onClick="increaseNum"
        android:padding="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/mainbutton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/ravenDollarsPerSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Raven Dollars Per Second: 0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ravenDollars" />


</androidx.constraintlayout.widget.ConstraintLayout>