<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:backgroundTint="#D8D7D7"
    android:backgroundTintMode="multiply"
    android:fadingEdge="horizontal|vertical"
    android:padding="@null"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageViewFlame"
        android:layout_width="51dp"
        android:layout_height="66dp"
        android:layout_marginEnd="20dp"
        android:adjustViewBounds="true"
        android:padding="@null"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499"
        app:srcCompat="@drawable/flame" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="51dp"
        android:layout_height="66dp"
        android:layout_marginEnd="20dp"
        android:adjustViewBounds="true"
        android:padding="@null"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.228"
        app:srcCompat="@drawable/rodneyicon" />

    <ImageView
        android:id="@+id/imageViewHelios"
        android:layout_width="51dp"
        android:layout_height="66dp"
        android:layout_marginEnd="20dp"
        android:adjustViewBounds="true"
        android:padding="@null"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.314"
        app:srcCompat="@drawable/heliosicon" />

    <ImageView
        android:id="@+id/imageViewKoontz"
        android:layout_width="51dp"
        android:layout_height="66dp"
        android:layout_marginEnd="20dp"
        android:adjustViewBounds="true"
        android:padding="@null"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.408"
        app:srcCompat="@drawable/koontz" />

    <TextView
        android:id="@+id/total_rodneys"
        android:layout_width="46dp"
        android:layout_height="26dp"
        android:layout_marginTop="172dp"
        android:layout_marginEnd="10dp"
        android:background="@null"
        android:ems="10"
        android:fontFamily="@font/ubuntu_bold"
        android:inputType="textPersonName"
        android:text="0"
        android:textAlignment="center"
        android:textColor="#0C423B"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.899"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/total_helios"
        android:layout_width="38dp"
        android:layout_height="24dp"
        android:layout_marginTop="248dp"
        android:layout_marginEnd="2dp"
        android:ems="10"
        android:fontFamily="@font/ubuntu_bold"
        android:inputType="textPersonName"
        android:text="0"
        android:textAlignment="center"
        android:textColor="#0C423B"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.881"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/total_eternalFlame"
        android:layout_width="63dp"
        android:layout_height="27dp"
        android:layout_marginTop="380dp"
        android:ems="10"
        android:fontFamily="@font/ubuntu_bold"
        android:inputType="textPersonName"
        android:text="0"
        android:textAlignment="center"
        android:textColor="#0C423B"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.89"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/total_koontz"
        android:layout_width="42dp"
        android:layout_height="22dp"
        android:layout_marginTop="316dp"
        android:ems="10"
        android:fontFamily="@font/ubuntu_bold"
        android:inputType="textPersonName"
        android:text="0"
        android:textAlignment="center"
        android:textColor="#0C423B"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.88"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewSanta"
        android:layout_width="51dp"
        android:layout_height="66dp"
        android:layout_marginEnd="20dp"
        android:adjustViewBounds="true"
        android:padding="@null"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.588"
        app:srcCompat="@drawable/santa" />

    <TextView
        android:id="@+id/total_joshTandy"
        android:layout_width="89dp"
        android:layout_height="28dp"
        android:layout_marginTop="444dp"
        android:ems="10"
        android:fontFamily="@font/ubuntu_bold"
        android:inputType="textPersonName"
        android:text="0"
        android:textAlignment="center"
        android:textColor="#0C423B"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.934"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <TextView
        android:id="@+id/ravenDollars"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="76dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:ellipsize="none"
        android:ems="10"
        android:enabled="false"
        android:focusable="auto"
        android:focusableInTouchMode="false"
        android:fontFamily="@font/ubuntu_bold"
        android:inputType="textPersonName"
        android:linksClickable="false"
        android:longClickable="false"
        android:selectAllOnFocus="false"
        android:text="0"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#E7EDE7"
        android:textSize="55sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/totalRavenDollars"
        android:layout_width="194dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:text="0 R$"
        android:textAlignment="viewStart"
        android:textColor="#F3F5F6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.073"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/store_button"
        android:layout_width="109dp"
        android:layout_height="102dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:fadingEdge="horizontal|vertical"
        android:fadingEdgeLength="20sp"
        android:onClick="openStorePage"
        android:outlineProvider="none"
        android:padding="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/storebutton"
        android:text="@string/store_nav_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/ravenButton"
        android:layout_width="240dp"
        android:layout_height="200dp"
        android:layout_marginBottom="112dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:minHeight="500dp"
        android:onClick="increaseNum"
        android:padding="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/mainbutton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/ravenDollarsPerSecond"
        android:layout_width="194dp"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:text="0 R$/s"
        android:textAlignment="viewStart"
        android:textColor="#F9FAFA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/totalRavenDollars" />

    <TextView
        android:id="@+id/achievementPopup"
        android:layout_width="222dp"
        android:layout_height="73dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="33dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/achievement"
        android:ellipsize="marquee"
        android:ems="10"
        android:fontFamily="@font/ubuntu_bold"
        android:text=""
        android:textAlignment="center"
        android:textColor="#007922"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.357"
        app:layout_constraintStart_toEndOf="@+id/store_button"
        app:layout_constraintTop_toBottomOf="@+id/ravenButton"
        app:layout_constraintVertical_bias="0.384" />


</androidx.constraintlayout.widget.ConstraintLayout>